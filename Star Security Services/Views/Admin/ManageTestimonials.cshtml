                               @model IEnumerable<Star_Security_Services.Models.Testimonials>
@{
    var contacts = ViewBag.Contacts as List<Star_Security_Services.Models.Contact>;
    ViewData["Title"] = "Manage Testimonials & Contacts";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">User Testimonials</h2>
    <table class="table table-bordered table-hover text-center align-middle">
        <thead class="thead-dark">
            <tr>
                <th>Username</th>
                <th>Message</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Username</td>
                    <td class="text-left">@t.Feedback</td>
                    <td><img src="@Url.Content("~/images/" + t.Image)" width="60" class="img-thumbnail" /></td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Delete this testimonial?')">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2 class="text-center mb-4 mt-5">Contact Submissions</h2>
    <table class="table table-bordered table-hover text-center align-middle">
        <thead class="thead-dark">
            <tr>
                <th>Email</th>
                <th>Phone</th>
                <th>Company</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in contacts)
            {
                <tr>
                    <td>@c.Email</td>
                    <td>@c.PhoneNumber</td>
                    <td>@c.CompanyName</td>
                    <td>@c.Subject</td>
                    <td class="text-left">@c.Message</td>
                    <td>
                        <a asp-action="DeleteContact" asp-route-id="@c.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Delete this contact message?')">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
