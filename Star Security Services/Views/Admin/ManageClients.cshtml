@model IEnumerable<Star_Security_Services.Models.User>

@{
    ViewData["Title"] = "Manage Clients";
}

<h2>Manage Clients</h2>

<a asp-action="AddClient" class="btn btn-success mb-3">Add New Client</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Company</th>
            <th>Phone</th>
           
            <th>Address</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.username</td>
                <td>@user.Email</td>
                <td>@user.CompanyName</td>
                <td>@user.PhoneNumber</td>
             
                <td>@user.Address</td>
                <td>
                    <a asp-action="EditClient" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="DeleteClient" asp-route-id="@user.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this client?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
