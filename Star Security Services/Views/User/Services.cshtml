@model IEnumerable<Star_Security_Services.Models.Services>

@{
    ViewData["Title"] = "Services";
    Layout = "userdash";
}

<h2 class="text-center py-5 text-gold fw-bold bg-black border-bottom border-warning shadow-lg">Our Security Services</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        @foreach (var service in Model)
        {
            <div class="col-lg-4 col-md-6 mb-5">
                <div class="premium-card p-4 shadow-lg">
                    <div class="card-header-custom mb-3 d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-gold">@service.Title</h4>
                        <span class="badge @(service.IsActive ? "bg-success" : "bg-secondary")">
                            @(service.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                    <div class="card-body text-light">
                        <p><i class="fas fa-code text-gold"></i> <strong>Code:</strong> @service.ServiceCode</p>
                        <p><i class="fas fa-info-circle text-gold"></i> <strong>Description:</strong> @service.Description</p>
                        <p><i class="fas fa-tags text-gold"></i> <strong>Type:</strong> @service.ServiceType</p>
                        <p><i class="fas fa-map-marker-alt text-gold"></i> <strong>Area:</strong> @service.ServiceArea</p>
                    </div>
                    <div class="text-center mt-4">
                        @if (service.IsActive)
                        {
                            <a href="@Url.Action("BookServices", "User", new { id = service.ServiceID })" class="btn btn-gold px-4 py-2 shadow-sm">
                                <i class="fas fa-check-circle me-2"></i>Book Now
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">Currently Unavailable</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center mt-5">No active services available at the moment.</div>
}

<!-- 💅 Premium Style -->
<style>
    body {
        background-color: #0d0d0d;
        color: #eee;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .text-gold {
        color: #ffb700;
    }

    .bg-black {
        background-color: #000 !important;
    }

    .premium-card {
        background: linear-gradient(145deg, #1c1c1c, #111);
        border: 1px solid #2c2c2c;
        border-radius: 12px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        overflow: hidden;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
    }

        .premium-card:hover {
            transform: translateY(-8px);
            box-shadow: 0px 15px 30px rgba(255, 183, 0, 0.2);
        }

    .card-header-custom {
        border-bottom: 1px solid #333;
        padding-bottom: 10px;
    }

    .btn-gold {
        background-color: #ffb700;
        color: #000;
        font-weight: bold;
        border: none;
        border-radius: 6px;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-gold:hover {
            background-color: #e6a300;
            color: #000;
        }

    .badge {
        font-size: 0.8rem;
        padding: 0.4rem 0.7rem;
    }

    .card-body p {
        font-size: 1rem;
        margin-bottom: 0.75rem;
    }

    .fas {
        margin-right: 8px;
    }

    /* Hover effect on card image */
    .premium-card img {
        width: 100%;
        height: auto;
        border-radius: 8px;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .col-md-6

    {
        flex: 0 0 100%;
        max-width: 100%;
    }

    }

    @@media (min-width: 992px) {
        .col-lg-4

    {
        flex: 0 0 33.333%;
        max-width: 33.333%;
    }

    }
</style>
