@{
    ViewData["Title"] = "Contact Us";
    Layout = "userdash";
}

<section class="contact-section">
    <div class="container">
        <h1 class="contact-title">Get in Touch</h1>
        <p class="contact-subtitle">We’re always ready to hear from you. Whether you have questions, feedback, or just want to say hello — we’d love to connect!</p>

        <div class="contact-info">
            <div class="info-box">
                <i class="fas fa-envelope icon"></i>
                <h3>Email</h3>
                <p>starservices921@gmail.com</p>
            </div>

            <div class="info-box">
                <i class="fas fa-map-marker-alt icon"></i>
                <h3>Address</h3>
                <p>123 Business Ave,<br />Suite 456,<br />Cityville, USA</p>
            </div>

            <div class="info-box">
                <i class="fas fa-phone icon"></i>
                <h3>Phone</h3>
                <p>+1 (123) 456-7890</p>
            </div>


            
        </div>

        <div class="action-section">
            <a href="@Url.Action("Contact", "User")" class="btn-contact">Contact Us</a>
        </div>

        <div class="social-section">
            <h3>Follow Us</h3>
            <p>Stay updated and connected with us through social media.</p>
            <div class="social-icons">
                <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
                <a href="#" title="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                <a href="#" title="Instagram"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </div>
</section>

<!-- Font Awesome CDN for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-yH7vOgBmm9pi7XnT7Wk5LwNblpHX5nUJnpTo1XkHAPF1/YTuvqDqE4t4WybjvlRSr69LgFTGbKVD2V6s3vUdOg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    .contact-section {
        background: #0d0d0d;
        color: #f1c40f;
        padding: 60px 0;
        font-family: 'Segoe UI', sans-serif;
    }

    .contact-title {
        font-size: 3rem;
        text-align: center;
        margin-bottom: 10px;
    }

    .contact-subtitle {
        font-size: 1.2rem;
        text-align: center;
        color: #ccc;
        margin-bottom: 40px;
    }

    .contact-info {
        max-width: 900px;
        margin: 0 auto 40px auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 30px;
    }

    .info-box {
        background-color: #1a1a1a;
        border: 1px solid #f1c40f;
        border-radius: 10px;
        padding: 30px 20px;
        text-align: center;
        transition: transform 0.3s ease;
    }

        .info-box:hover {
            transform: translateY(-5px);
        }

        .info-box h3 {
            margin-top: 15px;
            font-size: 1.3rem;
        }

        .info-box p {
            color: #fff;
            font-size: 1rem;
            margin-top: 8px;
        }

    .icon {
        font-size: 2rem;
        color: #f1c40f;
    }

    .action-section {
        text-align: center;
        margin-bottom: 40px;
    }

    .btn-contact {
        display: inline-block;
        background-color: #f1c40f;
        color: #000;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        text-decoration: none;
        transition: background 0.3s ease, color 0.3s ease;
        border: none; /* Prevent Bootstrap borders */
    }

        .btn-contact:hover {
            background-color: #d4ac0d;
            color: #000; /* Ensure it stays black */
            text-decoration: none;
        }


    .social-section {
        text-align: center;
    }

        .social-section h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

    .social-icons a {
        display: inline-block;
        font-size: 1.8rem;
        margin: 0 12px;
        color: #f1c40f;
        transition: transform 0.2s ease-in-out;
    }
    a{
        text-decoration:none;
    }
   
        .social-icons a:hover {
            transform: scale(1.2);
            color: #d4ac0d;
        }
</style>
