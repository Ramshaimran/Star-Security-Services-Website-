<style>

    #our-network {
        background-color: #111;
        color: #f39c12;
        padding: 40px;
        text-align: center;
    }

    h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    p {
        font-size: 1.2rem;
        margin-bottom: 40px;
        color: #ddd;
    }

    .regions-wrapper {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 30px;
    }

    .region {
        width: 23%;
        background-color: #222;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        transition: transform 0.3s ease-in-out;
    }

        .region:hover {
            transform: translateY(-10px);
        }

    h2 {
        font-size: 1.5rem;
        color: #f39c12;
        margin-bottom: 15px;
        text-transform: uppercase;
    }

    .branch-card {
        background-color: #333;
        border-radius: 10px;
        padding: 20px;
        /* border: 1px solid #f39c12; */
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

        .branch-card h3 {
            font-size: 1.5rem;
            color: #f39c12;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .branch-card p {
            color: white;
            margin: 10px 0;
            font-size: 1rem;
            line-height: 1.6;
        }

    @@media screen and (max-width: 1024px) {
        .region

    {
        width: 48%;
    }

    }

    @@media screen and (max-width: 768px) {
        .region

    {
        width: 100%;
    }

    h1 {
        font-size: 2.5rem;
    }

    p {
        font-size: 1.1rem;
    }

    }
</style>