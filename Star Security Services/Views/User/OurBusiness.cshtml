@{
    Layout = "userdash";
    ViewData["Title"] = "Our Business";
}

<section class="py-16 bg-black">

    <!-- Electronic Security Systems Section -->
    <div style="background-color: #111111; min-height: 100vh; display: flex; align-items: center; padding: 50px 0;">
        <div style="display: flex; align-items: center; justify-content: center; flex-wrap: wrap; max-width: 1200px; margin: auto; flex-direction: row-reverse;">
            <!-- Right Image -->
            <div style="flex: 1; min-width: 300px; text-align: center;">
                <img src="~/images/cc.png" alt="Electronic Security Systems" style="width: 90%; border-radius: 10px;">
            </div>

            <!-- Left Text -->
            <div style="flex: 1; min-width: 300px; padding: 20px; color: white;">
