


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Star Security Services</title>

    <!-- Bootstrap CSS -->
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"> *@
   
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- AOS CSS -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Arial', sans-serif;
            /* color: #333; */
            margin: 0;
            overflow-x: hidden;
        }

        /* Navbar Styling */
        .navbar {
             /* background-color: #0a1a2f;  */
             /* background-color:#1a202c; */
             height:6vw;
            background-color: black;

          
        }

        .imgs {
            max-width: 120px;
            max-height: 60px;
            height: auto;
            width: auto;
            margin-left: 10px;
            position: relative;
            top: -20px; 
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            margin-left: 10px;
        }


        .navbar-nav .nav-link {
            color: #d4af37 !important;
        }

            .navbar-nav .nav-link:hover {
                color: #d4af37!important;
            }

        .navbar-nav{
            color: #d4af37!important;
        }
        .sticky-navbar {
            position: sticky;
            top: 0;
            z-index: 100;
        }

        /* Video Section Styling */
        .video-section {
            position: relative;
            width: 100%;
            height: 50vh; /* Adjust the height as needed */
            background-color: #000;
            overflow: hidden;
        }

            .video-section video {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .video-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4); /* Dark overlay for text visibility */
        }

            .video-overlay h2 {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                color: #fff;
                font-size: 3rem;
                font-weight: bold;
                text-align: center;
            }

        /* Footer Styling */
        .footer {
            background-color: #1a202c;
            color: white;
            padding: 20px 0;
            text-align: center;
        }

            .footer a {
                color: #d4af37;
                text-decoration: none;
            }

                .footer a:hover {
                    color: #d4af37;
                }

            .footer .social-icons i {
                margin: 0 10px;
                font-size: 24px;
                color: #fff;
            }
            ul{
            color: #d4af37 !important;
            }

                .footer .social-icons i:hover {
            color: #d4af37;
                }
                .ss{
            color: #d4af37;
                font-weight:900;
            background-color: #f39c12;
                }

        /* Preloader Styles */
        #preloaderCanvas {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 100vw;
            background-color: #1a202c;
            z-index: 9999;
        }

        #mainContent {
          /*   display: none; */
          display:block;
        }

        .btn-login {
            background-color: #f39c12;
            color: black;
            font-weight:900;
            border: none;
            font-weight: bold;
            transition: background-color 0.3s ease;
            padding-left:.5vw;
            padding-right:.5vw;
            border-radius: 4px;
        }

            .btn-login:hover {
                background-color: #e67e22;
                color: white;
            }

            #wh{
                color:white!important;
            }
            a{
                text-decoration:none;
            }
    </style>
</head>
<body>

   

    <!-- Main Site Content -->
    <div id="mainContent">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark sticky-navbar">
    <div class="container-fluid">
        <div class="navbar-brand">
            <img class="imgs" src="~/images/sss.png" alt="star security logo">
        </div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link nav-skip-preloader" href="@Url.Action("home", "User")">Home</a></li>
                        <li class="nav-item"><a class="nav-link nav-skip-preloader" href="@Url.Action("About", "User")">About Us</a></li>
                        <li class="nav-item"><a class="nav-link nav-skip-preloader" href="@Url.Action("OurBusiness", "User")">Our Business</a></li>
                        <li class="nav-item"><a class="nav-link nav-skip-preloader" href="@Url.Action("OurNetwork", "User")">Our Network</a></li>
                        <li class="nav-item"><a class="nav-link nav-skip-preloader" href="@Url.Action("CareersWithUs", "User")">Careers</a></li>
                        <li class="nav-item"><a class="nav-link nav-skip-preloader" href="@Url.Action("Services", "User")">Services</a></li>
                        <li class="nav-item"><a class="nav-link nav-skip-preloader" href="@Url.Action("Clients", "User")">Clients</a></li>
                        <li class="nav-item"><a class="nav-link nav-skip-preloader" href="@Url.Action("testimonal", "User")">Testimonals</a></li>
                        <li class="nav-item"><a class="nav-link nav-skip-preloader" href="@Url.Action("Contacts", "User")">Contact Us</a></li>


                        @{
                            var userEmail = Context.Session.GetString("user_email");
                            var userName = Context.Session.GetString("username");
                            var profileImage = Context.Session.GetString("profile_image");
                        }

                        @if (!string.IsNullOrEmpty(userEmail))
                        {
                            <div style="display: flex; align-items: center; gap: 20px; padding: 8px 15px; border-radius: 12px; background-color: #000; box-shadow: 0 2px 8px rgba(0,0,0,0.4); max-width: fit-content;">
                                <div style="flex-shrink: 0;">
                                    <img src="~/users/@(string.IsNullOrEmpty(profileImage) ? "default-image.png" : profileImage)"
                                         alt="Profile Image"
                                         style="width: 42px; height: 42px; object-fit: cover; border-radius: 50%; border: 2px solid #f39c12;" />
                                </div>

                                <div style="display: flex; flex-direction: column; justify-content: center;">
                                    <span style="color: #f39c12; font-weight: 800; font-size: 14px; line-height: 1;">Welcome, @userName</span>
                                    <a href="@Url.Action("Logout", "User")"
                                       style="margin-top: 6px; font-size: 13px; font-weight: 600; color: #000; background-color: #f39c12; padding: 4px 12px; border-radius: 6px; text-decoration: none; width: fit-content;">
                                        Logout
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn-login ls" id="wh" style="color: black; text-decoration:none;" href="@Url.Action("Signup", "User")">Signup</a>
                            </li>
                        }






                    </ul>
                        

           
        </div>
    </div>
</nav>

        <!-- Page Content -->
        @RenderBody()

        <!-- Footer -->
        <footer class="footer">
            <div class="container">
                <p>&copy; 2025 Star Security Services | All Rights Reserved</p>
                <div class="social-icons">
                    <a href="https://facebook.com" target="_blank"><i class="fab fa-facebook-square"></i></a>
                    <a href="https://twitter.com" target="_blank"><i class="fab fa-twitter-square"></i></a>
                    <a href="https://linkedin.com" target="_blank"><i class="fab fa-linkedin"></i></a>
                    <a href="https://instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
                </div>
                <p><a href="@Url.Action("PrivacyPolicy", "Home")">Privacy Policy</a> | <a href="@Url.Action("TermsOfUse", "Home")">Terms of Use</a></p>
            </div>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)


</body>
</html>
