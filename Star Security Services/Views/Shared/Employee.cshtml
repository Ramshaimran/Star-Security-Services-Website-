@{
    var currentController = ViewData["CurrentController"]?.ToString();
    var currentAction = ViewData["CurrentAction"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Star Security Employee</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome (optional icons) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        :root {
            --primary-blue: #0d6efd;
            --light-blue: #e9f2ff;
            --dark-blue: #052c65;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f5f9ff;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar-custom {
            background-color: var(--primary-blue);
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #fff !important;
            }

        .sidebar {
            width: 250px;
            background-color: #ffffff;
            border-right: 1px solid #ddd;
            padding-top: 20px;
            min-height: calc(100vh - 56px); /* navbar height */
        }

            .sidebar a {
                display: block;
                padding: 12px 20px;
                color: #333;
                text-decoration: none;
                border-radius: 4px;
                margin: 8px 15px;
                transition: background-color 0.2s ease;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: var(--light-blue);
                    color: var(--primary-blue);
                    font-weight: 500;
                }

        .main-content {
            flex: 1;
            padding: 30px;
            background-color: #ffffff;
        }

        .footer {
            background-color: var(--primary-blue);
            color: #ffffff;
            text-align: center;
            padding: 10px 0;
        }

        .dashboard-wrapper {
            flex: 1;
            display: flex;
            overflow: hidden;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">👮‍♂️ Star Security - Employee</a>
            <div class="d-flex ms-auto">
                <a class="nav-link text-white" href="#"><i class="fas fa-user-circle"></i> @User.Identity?.Name</a>
                <a class="nav-link text-white" href="@Url.Action("Logout", "Admin")"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </div>
    </nav>

    <!-- Sidebar + Content -->
    <div class="dashboard-wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <a href="@Url.Action("Index", "Employee")" class="@(currentController == "Employee" && currentAction == "Index" ? "active" : "")">
                <i class="fas fa-home me-2"></i> Dashboard
            </a>
            <a href="@Url.Action("Profile", "Employee")" class="@(currentController == "Employee" && currentAction == "Profile" ? "active" : "")">
                <i class="fas fa-id-badge me-2"></i> My Profile
            </a>
            <a href="@Url.Action("Colleagues", "Employee")" class="@(currentController == "Employee" && currentAction == "Colleagues" ? "active" : "")">
                <i class="fas fa-users me-2"></i> Colleagues
            </a>
            <a href="@Url.Action("ClientAssignments", "Employee")" class="@(currentController == "Employee" && currentAction == "Assignment" ? "active" : "")">
                <i class="fas fa-building me-2"></i> Client Assignment
            </a>
            <a href="@Url.Action("Trainings", "Employee")" class="@(currentController == "Employee" && currentAction == "Trainings" ? "active" : "")">
                <i class="fas fa-chalkboard-teacher me-2"></i> Trainings
            </a>
            
        </div>

        <!-- Main -->
        <div class="main-content">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year Star Securities Ltd. | All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
