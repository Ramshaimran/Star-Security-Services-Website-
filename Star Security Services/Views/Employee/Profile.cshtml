@model Star_Security_Services.Models.EmployeeQrCodeViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "Employee";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>👤 My Profile</h2>
        <a href="@Url.Action("UpdateProfile", "Employee")" class="btn btn-primary">
            ✏️ Edit Profile
        </a>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered">
                <tr>
                    <th>Name</th>
                    <td>@Model.Employee.Name</td>
                </tr>
                <tr>
                    <th>Employee Code</th>
                    <td>@Model.Employee.Code</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Employee.email</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>********</td> <!-- Hide password for security -->
                </tr>
                <tr>
                    <th>Mobile</th>
                    <td>@Model.Employee.ContactNumber</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>@Model.Employee.Address</td>
                </tr>
                <tr>
                    <th>Department</th>
                    <td>@Model.Employee.Department</td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td>@Model.Employee.Role</td>
                </tr>
                <tr>
                    <th>Client</th>
                    <td>@Model.Employee.Client</td>
                </tr>
                <tr>
                    <th>Achievements</th>
                    <td>@Model.Employee.Achievements</td>
                </tr>
            </table>
        </div>
    </div>
</div>
